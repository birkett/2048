<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ constants.siteName }}</title>

        {% include './common/headMeta.html.njk' %}
    </head>
    <body>
        <div class="header-bar">
            <h1 class="title">2048</h1>
            <div class="tag-line">
                <p>Join the numbers and get to the <strong>2048 tile!</strong></p>
            </div>

            <div class="scores-container">
                <a class="restart-button">New Game</a>

                <div class="moves-container">0</div>
                <div class="score-container">0</div>
                <div class="best-container">0</div>
            </div>
        </div>

        {% include './common/gameContainer.html.njk' %}

        <script type="module" src="../js/application.js?v={{ constants.gitRevision() }}"></script>

        <script type="text/javascript">
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator.serviceWorker.register('../serviceWorker.js')
                        .then((registration) => {
                            console.log('ServiceWorker registration successful with scope: ', registration.scope);
                        })
                        .catch((err) => {
                            console.log(err);
                        })
                });
            }
        </script>
    </body>
</html>
